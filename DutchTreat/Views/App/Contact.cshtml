@model ContactViewModel
@{
    ViewBag.Title = "Contact Us";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.js"></script>
}
<form action="/contact" method="post" class="popup-form">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name">Your Name</label>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Email">Email</label>
        <input type="email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    =<div>
        <label asp-for="Subject">Subject</label><br />
        <input type="text" asp-for="Subject" /><br />
        <span asp-validation-for="Subject"></span>

    </div>
    <div>
        <label asp-for="Message">Message</label><br />
        <textarea rows="4" asp-for="Message"></textarea><br />
        <span asp-validation-for="Message"></span>
    </div>
    <div>
        <input type="submit" value="Send Message" />
    </div>
</form>