
@{
    ViewData["Title"] = "index";
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dutch Treat: @ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h1>Welcome to Dutch Treat</h1>
        <menu>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/app/contact">Contact Us</a></li>
                <li><a href="/app/about">About Us</a></li>
            </ul>
        </menu>
    </header>
    <section>    
        <h2>@ViewBag.Title</h2>
        @RenderBody()
    </section>
    <footer>Copyright 2019 Dutch Treat</footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/index.js"></script>
</body>
</html>